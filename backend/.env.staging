# ============================================================================
# Staging Environment Configuration (.env.staging)
# ============================================================================
# Used for pre-production testing with production-like settings

ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Staging Neon Database
DATABASE_URL=postgresql://staging_user:staging_password@staging-neon-pool.neon.tech/cyborgdb_staging?sslmode=require

# Staging Secrets (use strong values from secrets manager)
JWT_SECRET=REPLACE_WITH_STRONG_32_CHAR_SECRET_FROM_SECRETS_MANAGER
MASTER_ENCRYPTION_KEY=REPLACE_WITH_STRONG_32_CHAR_KEY_FROM_SECRETS_MANAGER

# CyborgDB
CYBORGDB_API_KEY=REPLACE_WITH_STAGING_API_KEY
CYBORGDB_ENDPOINT=https://staging-api.cyborg.co

# Server
HOST=0.0.0.0
PORT=8000

# Database Connection Pool
DB_POOL_SIZE=20
DB_ECHO=false

# Redis
REDIS_URL=redis://staging-redis:6379/0
REDIS_ENABLED=true

# CORS - Staging domain
CORS_ORIGINS=https://staging.yourdomain.com

# Storage - S3 or MinIO
STORAGE_BACKEND=s3
# AWS_ACCESS_KEY_ID=REPLACE_WITH_KEY
# AWS_SECRET_ACCESS_KEY=REPLACE_WITH_SECRET
# AWS_STORAGE_BUCKET_NAME=cyborgdb-staging
# AWS_STORAGE_REGION=us-east-1

# Embedding Service
EMBEDDING_SERVICE_URL=http://embedding-service:8001

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
