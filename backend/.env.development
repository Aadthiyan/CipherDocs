# ============================================================================
# Development Environment Configuration (.env.development)
# ============================================================================
# Used for local development with relaxed security and verbose logging

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Local Database
DATABASE_URL=postgresql://cyborgdb_user:cyborgdb_password@localhost:5432/cyborgdb

# Development Secrets (for testing only - change before production)
JWT_SECRET=dev_jwt_secret_at_least_32_characters_for_development_only_change_this_now
MASTER_ENCRYPTION_KEY=dev_master_key_32_characters_for_development_only_change_this

# CyborgDB
CYBORGDB_API_KEY=cyborg_dev_key_for_local_testing
CYBORGDB_ENDPOINT=http://localhost:8002

# Server
HOST=0.0.0.0
PORT=8000

# Database Connection Pool
DB_POOL_SIZE=5
DB_ECHO=true

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# CORS - Allow localhost
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Storage - Local filesystem
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=./storage/documents

# Embedding Service
EMBEDDING_SERVICE_URL=http://localhost:8001
